{
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "testPathIgnorePatterns": ["/node_modules", "/pbweb/", "/pbnode/", "/hedera-grpc/"],
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "globals": {
    "ts-jest": {
      "tsConfig": "tsconfig.json"
    }
  },
  "collectCoverageFrom": [
    "**/src/**/*",
    "!**/node_modules/**",
    "!**/src/addressbook/**"
  ]
}